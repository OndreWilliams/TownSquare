extends layout
mixin question(content, id, createdAt, votes, views, answers)
  div.townsquare-dark__contentArea--question
    a(href=`/questionView/question/${id}`)= content
    p= createdAt
    p#questionVotes= votes
    p#questionViews= answers
    p#questionAnswers= views
    p#questionVotestxt votes
    p#questionViewstxt answers
    p#questionAnswerstxt views
block content
  div.townsquare-dark__contentArea--header
    h1 Top Questions
    form(action='/new/question' method='get')
      button(type='submit' id='askQuestion' class='headerButton') Ask Question
    div.townsquare-dark__contentArea--headerGridGroup
      button#headerButton1.headerButton Interesting
      button#headerButton2.headerButton Hot
      button#headerButton3.headerButton Week
      button#headerButton4.headerButton Month
  div.townsquare-dark__contentArea--questions
    if allQuestions
        each question in allQuestions
            +question(question.content, question.id, question.createdAt, 1,2,3)
    else
        div.townsquare-dark__contentArea--question
            p No questions found
