extends layout
block content
     if errors
         div(class='errorMessages')
            p='The following errors were found:'
            ul
               each error in errors
                     li #{error}
     form(action='/account/signup' method='post' class='registerForm' id='signUpForm')
         h2(id='loginHeader') Signup
         input(type='hidden' name='_csrf' value=csrfToken)
         div(class='userbox')
            label(for='email')
            input(type='text' id='email' name='email' placeholder='Email' required)
         div(class='userbox')
            label(for='username')
            input(type='text' id='username' name='username' placeholder='Username' required)
         div(class='userbox')
            label(for='password')
            input(type='password' id='password' name='password' placeholder='Password' required)
         div(class='userbox')
            label(for='passwordConfirm')
            input(type='password' id='passwordConfirm' name='passwordConfirm' placeholder='Confirm Password' required)
         button(type='submit' class='formButton' id='registerButton') Submit
