extends layout.pug
block content
    div(class='townsquare-dark__contentArea--registerForm')
        if errors
            div(class='errorMessages')
                p='The following errors were found:'
                ul
                    each error in errors
                        li #{error}
        form(action='/account/signin' method='post' class='registerForm' id='loginForm')
            h2(id='loginHeader') Login
            input(type='hidden' name='_csrf' value=csrfToken)
            div(class='userbox')
                label(for='username')
                input(type='text' id='username' name='username' placeholder='Username' required)
            div(class='userbox')
                label(for='password')
                input(type='password' id='password' name='password' placeholder='Password' required)
            button(type='submit' class='formButton') Submit
            button(class='formButton' id='demoUser') Demo User

